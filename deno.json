{
  "tasks": {
    "build": "deno run --allow-read --allow-write --allow-env --allow-net --import-map=./import_map.json build.ts",
    "dev": {
      "command": "deno run --watch main.ts",
      "dependencies": [
        "build"
      ]
    },
    "test:browser:login": {
      "command": "deno test --allow-all ./system-tests/login.spec.ts",
      "dependencies": [
        "build"
      ]
    },
    "test:browser:all": {
      "command": "deno test --allow-all ./system-tests/*.spec.ts",
      "dependencies": [
        "build"
      ]
    },
    "test:browser:all:verbose": "VOI__VERBOSE=true deno task test:browser:all",
    "test:browser:setup": {
      "command": "deno run --allow-all npm:playwright install",
      "dependencies": [
        "build"
      ]
    },
    "server:dev": {
      "command": "VOI__SQLITE_LOCATION=\".persistence/db.sqlite\" VOI__ALLOWED_USERS='hello:486ea46224d1bb4fb680f34f7c9ad96a8f24ec88be73ea8e5a6c65260e9cb8a7' deno run --allow-all web-server/index.tsx --watch",
      "dependencies": [
        "build"
      ]
    },
    "start": "deno run --allow-env=PORT,NODE_ENV,VOI__VERBOSE,VOI__ALLOWED_USERS,VOI__SQLITE_LOCATION,DENO_SQLITE_PATH,DENO_SQLITE_LOCAL,DENO_DIR,XDG_CACHE_HOME,HOME --allow-read=web-server/public,.persistence,$HOME/.cache --allow-write=.persistence --allow-ffi --allow-net=0.0.0.0 web-server/index.tsx"
  },
  "imports": {
    "@db/sqlite": "jsr:@db/sqlite@^0.12.0",
    "@deno/emit": "jsr:@deno/emit@^0.46.0",
    "@std/assert": "jsr:@std/assert@1",
    "@std/http": "jsr:@std/http@^1.0.15",
    "@types/react": "npm:@types/react@^19.1.3",
    "@types/react-dom": "npm:@types/react-dom@^19.1.3",
    "@types/react-router-dom": "npm:@types/react-router-dom@^5.3.3",
    "playwright": "npm:playwright@^1.52.0",
    "react": "npm:react@^19.1.0",
    "react-dom": "npm:react-dom@^19.1.0",
    "react-router-dom": "npm:react-router-dom@^7.5.3"
  }
}
